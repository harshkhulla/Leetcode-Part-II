class Solution {
public:
    int count = 0;

    void solution(long n, int osf) {
        if(n == 1) {
            if(count == 0 || osf < count)  count = osf;
            return;
        }

        if(n % 2 == 0) {
            solution(n / 2, osf + 1);
        } else {
            solution(n - 1, osf + 1);
            solution(n + 1, osf + 1);
        }
    }

    int integerReplacement(int n) {
        solution(n, 0);
        return count;
    }
};
